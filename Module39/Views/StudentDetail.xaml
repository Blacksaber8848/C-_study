<UserControl x:Class="Module39.Views.StudentDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
	<StackPanel >
		<Label Content="Selected Student:"/>
		<TextBox x:Name="selectedStudentNameTextBox"
				 Margin="5"
				 IsReadOnly="False"
				 Text="{Binding SelectedPerson.Name}"/>
		<Label Content="ID:"/>
		<TextBox x:Name="selectedStudentIdTextBox"
				 Margin="5"
				 IsReadOnly="False"
				 Text="{Binding SelectedPerson.Id}"/>
		<Label Content="Faculties:"/>
		<TextBox x:Name="selectedStudentFacultiesTextBox"
				 Margin="5"
				 IsReadOnly="False"
				 Text="{Binding SelectedPerson.Faculties}"/>
	
	</StackPanel>
      

</UserControl>