<Window x:Class="task36.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Information" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="studentsListBox" 
                 DisplayMemberPath="Name" 
                 SelectionMode="Single" 
                 SelectionChanged="ListBox_SelectionChanged"
                 Grid.Column="0"/>

        <StackPanel Grid.Column="1">
            <Label Content="Selected Student:"/>
            <TextBox x:Name="selectedStudentNameTextBox" 
                     Margin="5" 
                     IsReadOnly="False"/>
            <Label Content="ID:"/>
            <TextBox x:Name="selectedStudentIdTextBox" 
                     Margin="5" 
                     IsReadOnly="False"/>
            <Label Content="Faculties:"/>
            <TextBox x:Name="selectedStudentFacultiesTextBox" 
                     Margin="5" 
                     IsReadOnly="False"/>
            <Button Content="Update Information" 
                    Margin="5" 
                    Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>